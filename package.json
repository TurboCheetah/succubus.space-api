{
  "name": "succubus.space",
  "version": "2.7.0",
  "description": "a fast API for fetching hentai data built with Redis and MongoDB",
  "author": "Turbo",
  "license": "MIT",
  "scripts": {
    "start": "wireit",
    "dev": "wireit",
    "build": "wireit",
    "lint": "wireit",
    "lint:fix": "wireit",
    "test": "yarn docker:dev && jest",
    "patch": "standard-version --release-as patch",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "wireit": {
    "start": {
      "command": "cross-env NODE_ENV=production node dist/server.js",
      "dependencies": [
        "build"
      ],
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    },
    "dev": {
      "command": "cross-env NODE_ENV=development nodemon",
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    },
    "build": {
      "command": "tsc --pretty -p tsconfig.prod.json && tsc-alias",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.prod.json",
        ".tsbuildinfo"
      ],
      "output": [
        "dist/**"
      ],
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    },
    "lint": {
      "command": "eslint --ignore-path .gitignore --ext .ts src/",
      "files": [
        "src/**/*.ts",
        ".eslintrc.json"
      ],
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    },
    "lint:fix": {
      "command": "eslint --ignore-path .gitignore --ext .ts src/ --fix && prettier --write src/",
      "files": [
        "src/**/*.ts",
        ".eslintrc.json",
        ".prettierrc"
      ],
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TurboCheetah/succubus.space-api.git"
  },
  "bugs": {
    "url": "https://github.com/TurboCheetah/succubus.space-api/issues"
  },
  "homepage": "https://github.com/TurboCheetah/succubus.space-api#readme",
  "dependencies": {
    "@sentry/node": "6.19.7",
    "apollo-server-cache-redis": "3.3.1",
    "apollo-server-core": "3.7.0",
    "apollo-server-express": "3.7.0",
    "bull": "4.8.2",
    "class-validator": "0.13.2",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv-cra": "3.0.2",
    "express": "4.18.1",
    "graphql": "15.8.0",
    "helmet": "5.0.2",
    "hpp": "0.2.3",
    "ioredis": "5.0.4",
    "mongoose": "6.3.2",
    "morgan": "1.10.0",
    "nhentai": "3.0.0",
    "node-cron": "3.0.0",
    "phin": "3.6.1",
    "rate-limiter-flexible": "2.3.7",
    "redis-json": "6.0.3",
    "reflect-metadata": "0.1.13",
    "tsc-alias": "1.6.7",
    "tsconfig-paths": "4.0.0",
    "tslib": "2.4.0",
    "tsyringe": "4.6.0",
    "type-graphql": "1.1.1",
    "typescript": "4.6.4",
    "winston": "3.7.2",
    "wireit": "0.4.0"
  },
  "devDependencies": {
    "@types/bull": "3.15.8",
    "@types/compression": "1.7.2",
    "@types/cors": "2.8.12",
    "@types/eslint": "8.4.2",
    "@types/express": "4.17.13",
    "@types/hpp": "0.2.2",
    "@types/ioredis": "4.28.10",
    "@types/jest": "27.5.0",
    "@types/morgan": "1.9.3",
    "@types/node": "16.11.33",
    "@types/node-cron": "3.0.1",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.2.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "husky": "7.0.4",
    "jest": "28.1.0",
    "lint-staged": "12.4.1",
    "nodemon": "2.0.16",
    "prettier": "2.6.2",
    "standard-version": "9.3.2",
    "supertest": "6.2.3",
    "ts-jest": "28.0.2",
    "ts-node": "10.7.0"
  },
  "lint-staged": {
    "src/*.ts": [
      "pnpm lint:fix",
      "pnpm test --bail --watchAll=false --findRelatedTests"
    ]
  },
  "packageManager": "pnpm@7.0.1"
}
